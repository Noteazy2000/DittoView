{
  "name": "dittoview",
  "version": "0.1.1-beta",
  "description": "DittoView - Your solution to all queue problems.",
  "main": "main.js",
  "author": "NOTEAZY L.L.C.",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/YOUR_REPOSITORY_NAME.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.noteazyllc.dittoview",
    "productName": "DittoView",
    "copyright": "Copyright Â© 2025 NOTEAZY L.L.C.",
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/.bin",
      "!node_modules/**/*.map",
      "!node_modules/**/*.md",
      "!release/",
      "!dist_electron/",
      "!.git/",
      "!*.code-workspace"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "maintainer": "Noteazy2000"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Noteazy2000",
        "repo": "DittoView"
      }
    ]
  }
}